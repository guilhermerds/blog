<%- include('../../partials/header.ejs') %>
<body>
  <%- include('../../partials/home_navbar.ejs') %>

  <div class="container">
    <% result.articles.rows.forEach(article => {%>
    <div class="card mt-3">
      <div class="card-header">
        <h2><%= article.title %></h2>
      </div>
      <div class="card-body">
        <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
      </div>
    </div>
    <%});%>

    <div class="row my-3">
      <div class="col col-12">
        <% if(result.page>2){ %>
        <a href="/articles/page/<%= result.page - 1 %>">
          <<< prev
        </a>

        <% }else if(result.page == 2){ %>

        <a href="/">
          <<< prev
        </a>

        <% } %> <% if(result.next){ %>
        <a class="float-right" href="/articles/page/<%= result.page + 1 %>">
          next >>>
        </a>
        <% } %>
      </div>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>
